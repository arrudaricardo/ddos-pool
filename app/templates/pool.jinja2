  {% include 'attack_script/'+attackType+'.jinja2'%}
</script>
{% endif %}

{#  General Code for pool page    #}
<script type=text/javascript>
  //display code in DOM
  let customCode = $('#attackCode').text();
  $('#displayCode').text(customCode);

