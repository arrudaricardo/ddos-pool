    $('#displayCode').css('max-height', document.getElementById('cardInfo').clientHeight )
  });

  </script>

  <script id='socketIO' type=text/javascript>
  $(window).on('load', function() {
    var socket;
            $(document).ready(function(){

                socket = io.connect('http://' + document.domain + ':' + location.port + '/chat');
                socket.on('connect', function() {
                  $('#chatBox').removeClass('loading')
                    socket.emit('joined', {});
                });
                socket.on('status', function(data) {
                    $('#chat').val($('#chat').val() + '<' + data.msg + '>\n');
                    $('#chat').scrollTop($('#chat')[0].scrollHeight);
                });
                socket.on('message', function(data) {
                    $('#chat').val($('#chat').val() + data.msg + '\n');
                    $('#chat').scrollTop($('#chat')[0].scrollHeight);
                });
                $('#text').keypress(function(e) {
                    var code = e.keyCode || e.which;
                    if (code == 13) {
                        text = $('#text').val();
                        $('#text').val('');
                        socket.emit('text', {msg: text});
                    }
                });
            });
            document.getElementById('disconnectChat').onclick = function () {
              socket.emit('left', {}, function() {
                    socket.disconnect();
                    $('#chatBox').addClass('d-hide')
                });
            }
            document.getElementById('sendText').click = function(){
              text = $('#text').val();
              $('#text').val('');
              socket.emit('text', {msg: text});
            }
});



  </script>

{% endblock %}